{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"],
      "@seikonn/easyuse": ["src/index.ts"]
    },
    "strict": true,
    "noUnusedLocals": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "rollup.config.ts"
  ]
}
